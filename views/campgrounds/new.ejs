<% layout('./layout/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New campgroud!</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" class="validating-form" enctype="multipart/form-data" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="title">title</label>
                    <input type="text" class="form-control" name="campground[title]" id="title" required>
                    <div class="valid-feedback">
                        SUCCESS!!!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location">location</label>
                    <input type="text" class="form-control" name="campground[location]" id="location" required>
                    <div class="valid-feedback">
                        SUCCESS!!!
                    </div>
                </div>

                <div class="mb-3">
                    <label for="formFile" class="form-label custom-file-label">Upload image(s)</label>
                    <input class="form-control custom-file-input" type="file" id="formFile" name="images" multiple>
                </div>

                <div class="mb-3">
                    <laber class="form-label" for="price">Price</laber>
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon1">$</span>
                        <input type="text" class="form-control" placeholder="0.00" id="price" aria-label="Username"
                            name="campground[price]" aria-describedby="basic-addon1" required>
                    </div>
                    <div class="valid-feedback">
                        SUCCESS!!!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">description</label>
                    <textarea type="text" class="form-control" name="campground[description]" id="description"
                        required></textarea>
                    <div class="valid-feedback">
                        SUCCESS!!!
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">submmit</button>
                </div>
            </form>
        </div>
    </div>